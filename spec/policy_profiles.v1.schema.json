{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://lexlattice.local/spec/policy_profiles.v1.schema.json",
  "title": "policy/profiles.v1.json",
  "type": "object",
  "required": [
    "schema",
    "profiles"
  ],
  "properties": {
    "schema": {
      "const": "policy.profiles.v1"
    },
    "profiles": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/profile"
      }
    }
  },
  "$defs": {
    "hash": {
      "type": "string",
      "pattern": "^[a-f0-9]{64}$"
    },
    "profile": {
      "type": "object",
      "required": [
        "profile_id",
        "profile_version",
        "default_policy_hash",
        "allowed_policy_hashes",
        "policy_ref"
      ],
      "properties": {
        "profile_id": {
          "type": "string",
          "minLength": 1
        },
        "profile_version": {
          "type": "string",
          "minLength": 1
        },
        "default_policy_hash": {
          "$ref": "#/$defs/hash"
        },
        "allowed_policy_hashes": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/$defs/hash"
          }
        },
        "policy_ref": {
          "type": "string",
          "minLength": 1
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
