{
  "schema": "odeu.instructions.v1",
  "rules": [
    {
      "rule_id": "allow_read",
      "rule_version": 1,
      "priority": 20,
      "kind": "allow",
      "when": {
        "atom": "mode_is",
        "args": [
          "read_only"
        ]
      },
      "then": {
        "effect": "allow_action",
        "params": {}
      },
      "message": "Allow read mode with revised wording",
      "code": "ALLOW_READ"
    },
    {
      "rule_id": "require_write_approval",
      "rule_version": 1,
      "priority": 10,
      "kind": "require",
      "when": {
        "atom": "mode_is",
        "args": [
          "writes_allowed"
        ]
      },
      "then": {
        "effect": "require_approval",
        "params": {}
      },
      "message": "Require approval for write mode with revised wording",
      "code": "REQUIRE_WRITE_APPROVAL"
    }
  ]
}
